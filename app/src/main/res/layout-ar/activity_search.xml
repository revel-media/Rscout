<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Search">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:weightSum="2"
            android:background="@color/green7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <ImageView
                android:padding="7dp"
                android:id="@+id/back"
                android:src="@drawable/ic_arrow_back"
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.3"/>

            <FrameLayout
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.3">

                <EditText
                    android:textColorHint="@color/white"
                    android:id="@+id/search"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:hint="@string/search"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_border"
                    />

                <ProgressBar
                    android:visibility="gone"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="end|center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/scoutProgress"/>
            </FrameLayout>



            <TextView
                android:enabled="false"
                android:textAlignment="center"
                android:id="@+id/doneView"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/done"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:visibility="gone"
                android:layout_margin="20dp"
                android:id="@+id/userInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userPpView"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/usernameView"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/username"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_marginEnd="15dp"
                android:paddingEnd="10dp"
                android:paddingStart="5dp"
                android:layout_marginStart="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scoutsRecView"/>
        </LinearLayout>


    </LinearLayout>

    <id.arieridwan.lib.PageLoader
        android:layout_gravity="center"
        android:id="@+id/pageLoader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:setLoadingText="Please wait..."
        app:setErrorText="Something happened"
        app:setTextColor="@color/black"
        app:setTextSize="16sp"
        app:setLoadingImage="@drawable/rezetopia"
        app:setLoadingAnimationMode="rotate"/>


</FrameLayout>
